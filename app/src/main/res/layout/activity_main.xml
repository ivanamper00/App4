<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    android:orientation="vertical"
    tools:context=".controller.activity.MainActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:elevation="10dp"
        android:padding="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
<!--        <LinearLayout-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="match_parent"-->
<!--            android:layout_marginRight="20dp"-->
<!--            android:gravity="center">-->
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="210dp"
                android:layout_height="43dp"
                android:src="@drawable/nav_header"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
<!--        </LinearLayout>-->
    </androidx.appcompat.widget.Toolbar>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:cardCornerRadius="5dp">
            <ImageView
                android:layout_width="250dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:src="@drawable/sample1"/>
                <TextView
                    android:id="@+id/games"
                    android:layout_width="250dp"
                    android:layout_height="100dp"
                    android:background="@drawable/text_background"
                    android:fontFamily="@font/msyi"
                    android:gravity="center_vertical"
                    android:paddingLeft="40dp"
                    android:text="Games"
                    android:textSize="26sp"
                    android:textStyle="bold|italic" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:layout_marginLeft="30dp"

            android:layout_marginRight="10dp"
            app:cardCornerRadius="5dp">
            <ImageView
                android:layout_width="250dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:src="@drawable/sample3"/>
            <TextView
                android:id="@+id/teams"
                android:layout_width="250dp"
                android:layout_height="100dp"
                android:background="@drawable/text_background"
                android:fontFamily="@font/msyi"
                android:gravity="center_vertical"
                android:paddingLeft="40dp"
                android:text="Teams"
                android:textSize="26sp"
                android:textStyle="bold|italic" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="10dp"
            app:cardCornerRadius="5dp">
            <ImageView
                android:layout_width="250dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:src="@drawable/sample2"/>
            <TextView
                android:id="@+id/series"
                android:layout_width="250dp"
                android:layout_height="100dp"
                android:background="@drawable/text_background"
                android:fontFamily="@font/msyi"
                android:gravity="center_vertical"
                android:paddingLeft="40dp"
                android:text="Series"
                android:textSize="26sp"
                android:textStyle="bold|italic" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="10dp"
            app:cardCornerRadius="5dp">
            <ImageView
                android:layout_width="250dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:src="@drawable/sample4"/>
            <TextView
                android:id="@+id/standings"
                android:layout_width="250dp"
                android:layout_height="100dp"
                android:background="@drawable/text_background"
                android:fontFamily="@font/msyi"
                android:gravity="center_vertical"
                android:paddingLeft="40dp"
                android:text="Standings"
                android:textSize="26sp"
                android:textStyle="bold|italic" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>