<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginVertical="5dp"
    android:layout_marginHorizontal="10dp"
    app:cardCornerRadius="5dp">

    <LinearLayout
        android:id="@+id/match_details_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/match_details_series"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:textStyle="bold"
            android:gravity="center"
            android:text="Series"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/match_details_venue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="Venue"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/match_details_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="Status"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/match_details_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/match_details_batting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Home"
            android:layout_weight=".5"/>

        <ImageView
            android:id="@+id/match_details_home_logo"
            android:layout_width="200dp"
            android:layout_height="100dp"/>

        <TextView
            android:id="@+id/match_details_home_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:textStyle="bold"
            android:gravity="center"/>
        <TextView
            android:id="@+id/match_details_home_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:gravity="center"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/match_details_home_overs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:layout_gravity="center"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Away"
            android:textStyle="bold"
            android:layout_weight=".5"/>
        <ImageView
            android:id="@+id/match_details_away_logo"
            android:layout_width="200dp"
            android:layout_height="100dp"/>

        <TextView
            android:id="@+id/match_details_away_name"
            android:layout_width="match_parent"
            android:textStyle="bold"
            android:layout_marginVertical="5dp"
            android:layout_height="wrap_content"
            android:gravity="center"/>
        <TextView
            android:id="@+id/match_details_away_score"
            android:layout_width="match_parent"
            android:layout_marginVertical="5dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/match_details_away_overs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/match_details_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginVertical="5dp"
            android:layout_marginBottom="5dp"
            android:textStyle="italic"
            android:paddingRight="10dp"
            android:text="Date"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relative_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ProgressBar
            android:layout_centerInParent="true"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
    </RelativeLayout>


</androidx.cardview.widget.CardView>